@page "{id:int}"
@model AdminProductsEditModel
@{
    ViewData["Title"] = "Edit Product";
}
<div class="container my-4">
    <div class="card shadow-sm">
        <div class="card-header">
            <h4 class="mb-0">Edit Product</h4>
        </div>

        <div class="card-body">
            <form method="post">
                <input type="hidden" asp-for="Product.ProductId" />

                <div class="mb-3">
                    <label asp-for="Product.Name" class="form-label"></label>
                    <input asp-for="Product.Name" class="form-control" />
                    <span asp-validation-for="Product.Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Product.Description" class="form-label"></label>
                    <textarea asp-for="Product.Description" class="form-control"></textarea>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="Product.Price" class="form-label"></label>
                        <input asp-for="Product.Price" class="form-control" />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Product.Stock" class="form-label"></label>
                        <input asp-for="Product.Stock" class="form-control" />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Product.IsFeatured" class="form-label"></label>
                        <select asp-for="Product.IsFeatured" class="form-select">
                            <option value="false">No</option>
                            <option value="true">Yes</option>
                        </select>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Product.CategoryId" class="form-label"></label>
                    <select asp-for="Product.CategoryId" class="form-select"
                        asp-items="Model.CategoriesSelectList"></select>
                    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Product.ImageUrl" class="form-label"></label>
                    <input asp-for="Product.ImageUrl" class="form-control" />
                </div>

                <div class="card-footer bg-white d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a class="btn btn-secondary" asp-page="Index">Back to list</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}