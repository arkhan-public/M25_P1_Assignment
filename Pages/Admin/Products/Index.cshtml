@page
@model AdminProductsIndexModel
@{
    ViewData["Title"] = "Products - Admin";
}
<div class="container my-4">
    <div class="p-4 mb-4 rounded bg-primary text-white">
        <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
            <div>
                <h1 class="h3 mb-1">Products</h1>
                <p class="mb-0">Manage your product catalogue — create, edit, view details, and remove products.</p>
            </div>
            <div class="d-flex gap-2">
                <a class="btn btn-light" asp-page="Create"><i class="bi bi-plus-lg"></i> Create New Product</a>
                <a class="btn btn-outline-light" asp-page="/Admin/Index">Back to Admin Home</a>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <colgroup>
                        <col style="width:30%" />  <!-- Name -->
                        <col style="width:20%" />  <!-- Category -->
                        <col style="width:15%" />  <!-- Price -->
                        <col style="width:10%" />  <!-- Stock -->
                        <col style="width:10%" />  <!-- Featured -->
                        <col style="width:15%" />  <!-- Actions -->
                    </colgroup>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Stock</th>
                            <th>Featured</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var p in Model.Products)
                    {
                        <tr>
                            <td>@p.Name</td>
                            <td>@p.Category?.Name</td>
                            <td>@p.Price.ToString("C")</td>
                            <td>@p.Stock</td>
                            <td>@(p.IsFeatured ? "Yes" : "No")</td>
                            <td>
                                <a class="btn btn-sm btn-info" asp-page="Details" asp-route-id="@p.ProductId">Details</a>
                                <a class="btn btn-sm btn-warning" asp-page="Edit" asp-route-id="@p.ProductId">Edit</a>
                                <a class="btn btn-sm btn-danger" asp-page="Delete" asp-route-id="@p.ProductId">Delete</a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>