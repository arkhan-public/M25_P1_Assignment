@page "{id:int}"
@model AdminProductsDetailsModel
@{
    ViewData["Title"] = "Product Details";
}
<div class="container my-4">
    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-start">
            <div>
                <h4 class="mb-0">@Model.Product.Name</h4>
                <small class="text-muted">@Model.Product.Category?.Name</small>
            </div>
            <div class="text-end">
                <div class="h5 mb-0 text-primary">@Model.Product.Price.ToString("C")</div>
                <small class="text-muted">Stock: @Model.Product.Stock</small>
            </div>
        </div>

        <div class="card-body">
            @if (!string.IsNullOrEmpty(Model.Product.ImageUrl))
            {
                <img src="@Model.Product.ImageUrl" class="img-fluid mb-3" style="max-height:300px; object-fit:cover;" alt="@Model.Product.Name" />
            }

            <p>@Model.Product.Description</p>
        </div>

        <div class="card-footer d-flex justify-content-between">
            <div>
                <a class="btn btn-warning" asp-page="Edit" asp-route-id="@Model.Product.ProductId">Edit</a>
            </div>
            <div>
                <a class="btn btn-secondary" asp-page="Index">Back to list</a>
            </div>
        </div>
    </div>
</div>