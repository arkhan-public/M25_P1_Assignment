@page
@model AdminCategoriesCreateModel
@{
    ViewData["Title"] = "Create Category";
}
<div class="container my-4">
    <div class="card shadow-sm">
        <div class="card-header">
            <h4 class="mb-0">Create Category</h4>
        </div>

        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label asp-for="Category.Name" class="form-label"></label>
                    <input asp-for="Category.Name" class="form-control" />
                    <span asp-validation-for="Category.Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Category.Description" class="form-label"></label>
                    <textarea asp-for="Category.Description" class="form-control"></textarea>
                </div>

                <div class="card-footer bg-white d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a class="btn btn-secondary" asp-page="Index">Back to list</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}