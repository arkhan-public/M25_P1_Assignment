@page
@model AdminCategoriesIndexModel
@{
    ViewData["Title"] = "Categories - Admin";
}
<div class="container my-4">
    <div class="p-4 mb-4 rounded bg-primary text-white">
        <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
            <div>
                <h1 class="h3 mb-1">Categories</h1>
                <p class="mb-0">Manage categories used to organize products. Add, edit or remove categories here.</p>
            </div>
            <div class="d-flex gap-2">
                <a class="btn btn-light" asp-page="Create"><i class="bi bi-plus-lg"></i> Create New Category</a>
                <a class="btn btn-outline-light" asp-page="/Admin/Index">Back to Admin Home</a>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <colgroup>
                        <col style="width:25%" />
                        <col style="width:60%" />
                        <col style="width:15%" />
                    </colgroup>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var c in Model.Categories)
                    {
                        <tr>
                            <td>@c.Name</td>
                            <td>@c.Description</td>
                            <td>
                                <a class="btn btn-sm btn-info" asp-page="Details" asp-route-id="@c.CategoryId">Details</a>
                                <a class="btn btn-sm btn-warning" asp-page="Edit" asp-route-id="@c.CategoryId">Edit</a>
                                <a class="btn btn-sm btn-danger" asp-page="Delete" asp-route-id="@c.CategoryId">Delete</a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>